rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function signedIn() { return request.auth != null; }
    function isOwner(uid) { return signedIn() && request.auth.uid == uid; }

    // ---- Koleksi "vendors/{uid}" ----
    match /vendors/{uid} {
      allow read:  if isOwner(uid);
      allow write: if isOwner(uid);

      match /packages/{docId}  { allow read, write: if isOwner(uid); }
      match /addons/{docId}    { allow read, write: if isOwner(uid); }
      match /discounts/{docId} { allow read, write: if isOwner(uid); }
      match /bundles/{docId}   { allow read, write: if isOwner(uid); }
    }

    // ---- Koleksi lama "vendor/{uid}" ----
    match /vendor/{uid} {
      allow read:  if isOwner(uid);
      allow write: if isOwner(uid);

      match /packages/{docId}  { allow read, write: if isOwner(uid); }
      match /addons/{docId}    { allow read, write: if isOwner(uid); }
      match /discounts/{docId} { allow read, write: if isOwner(uid); }
      match /bundles/{docId}   { allow read, write: if isOwner(uid); }
    }
  }
}
